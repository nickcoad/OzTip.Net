@using Microsoft.AspNet.Identity

<nav class="navbar-default navbar-static-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav" id="side-menu">
            <li class="nav-header">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown profile-element">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="clear">
                                <span class="block m-t-xs">
                                    <span class="text-muted text-xs block">Logged in as </span>
                                    <strong class="font-bold">@User.Identity.GetUserName() <b class="caret"></b></strong>
                                </span>
                            </span>
                        </a>
                        <ul class="dropdown-menu animated fadeInRight m-t-xs">
                            <li><a href="#"><span class="fa fa-fw fa-user"></span> Profile</a></li>
                            <li><a href="#"><span class="fa fa-fw fa-envelope-o"></span> Messages</a></li>
                            <li><a href="#"><span class="fa fa-fw fa-cog"></span> Settings</a></li>
                            <li><a href="#"><span class="fa fa-fw fa-sign-out"></span> Logout</a></li>
                        </ul>
                    </div>
                }
                <div class="logo-element">
                    OzTip
                </div>
            </li>
            <li class="@Html.IsSelected(action: "index", controller: "home")">
                <a href="@Url.Action("index", "home")">
                    <i class="fa fa-home"></i>
                    <span class="nav-label">Home</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: "competitions")">
                <a href="@Url.Action("index", "competitions" )">
                    <i class="fa fa-list"></i>
                    <span class="nav-label">Competitions</span>
                </a>
            </li>
        </ul>
    </div>
</nav>