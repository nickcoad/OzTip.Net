@model OzTip.Models.User

@{
    Layout = "~/Views/Shared/hero-layout.cshtml";
    ViewBag.HeroImageUrl = Url.Content("~/Assets/img/users/" + @Model.UserName + "-cover.png");
}

@section CoverContent
{
    <div class="user-profile-image" style="background-image: url(@Url.Content("~/Assets/img/users/" + @Model.UserName + "-profile.png")); background-size: cover;"></div>
    <h1>@string.Join(" ", new string[] {Model.GivenName, Model.Surname})</h1>
    <p>User profile</p>
}

<h1>User details</h1>
<a class="btn btn-primary" href="@Url.Action("edit", "users", new { id = Model.Id })">Edit details</a>